{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "@common": ["lib/common"],
      "@common/*": ["lib/common/*"],
      "@lib": ["lib/shopify"],
      "@lib/*": ["lib/shopify/*"],
      "@components/*": ["components/*"],
      "@assets/*": ["assets/*"]
    },
    "incremental": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "./cypress.d.ts"],
  "exclude": ["node_modules"]
}
